<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.author.name %>:</strong>
          <%= comment.content %>
        </p>
      </div>
    </div>
    <% if user_signed_in? && comment.author == current_user %>
     <%= link_to 'Delete', [comment.post, comment],
                  method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </article>
</div>